<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
    </head>
    <body>
        <!-- Hero Section -->
        <section id="page-header" class="blog-header">
            <h2>#WelcomeBack</h2>
            <p>Your journey awaits. Log in and pick up right where you left off!</p>
        </section>

        <!-- Login Form Section -->
        <section id="login-form">
            <div class="form-box">
                <h2>Login</h2>
                
                <!-- Error Messages -->
                <% if (messages && messages.error && messages.error.length > 0) { %>
                    <div id="error-messages" class="alert alert-error">
                        <% messages.error.forEach(function(error) { %>
                            <div class="error-message"><%= error %></div>
                        <% }); %>
                    </div>
                <% } %>

                <!-- Success Messages -->
                <% if (messages && messages.success && messages.success.length > 0) { %>
                    <div id="success-messages" class="alert alert-success">
                        <% messages.success.forEach(function(success) { %>
                            <div class="success-message"><%= success %></div>
                        <% }); %>
                    </div>
                <% } %>

                <form action="/auth/login" method="POST">
                    <input type="email" 
                           placeholder="Email" 
                           name="email" 
                           value="<%= locals.formData ? formData.email : '' %>"
                           required>
                    <input type="password" 
                           placeholder="Password" 
                           name="password" 
                           required>
                    <button type="submit" class="normal">Login</button>

                    <div class="divider">
                        <span>OR</span>
                    </div>

                    <div class="social-login">
                        <a href="/auth/google" class="google-btn">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg" alt="Google logo">
                            Sign in with Google
                        </a>
                    </div>

                    <p>Don't have an account? <a href="/auth/register">Register</a></p>
                    <p><a href="/auth/forgot-password">Forgot Password?</a></p>
                </form>
            </div>
        </section>

        <script>
            // Auto-hide messages after 5 seconds
            const messages = document.querySelectorAll('.alert');
            messages.forEach(message => {
                setTimeout(() => {
                    message.style.display = 'none';
                }, 5000);
            });
        </script>
    </body>
</html>