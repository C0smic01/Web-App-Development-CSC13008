<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Register</title>
    </head>
    <body>
        <!-- Hero Section -->
        <section id="page-header" class="blog-header">
            <h2>#JoinTheJourney</h2>
            <p>Dive into the world of trends and inspiration curated just for you!</p>
        </section>

        <!-- Registration Form Section -->
        <section id="register-form">
            <div class="form-box">
                <h2>Register</h2>
                
                <!-- Error Messages -->
                <% if (messages && messages.error && messages.error.length > 0) { %>
                    <div id="error-messages" class="alert alert-error">
                        <% messages.error.forEach(function(error) { %>
                            <div class="error-message"><%= error %></div>
                        <% }); %>
                    </div>
                <% } %>

                <!-- Success Messages -->
                <% if (messages && messages.success && messages.success.length > 0) { %>
                    <div id="success-messages" class="alert alert-success">
                        <% messages.success.forEach(function(success) { %>
                            <div class="success-message"><%= success %></div>
                        <% }); %>
                    </div>
                <% } %>

                <form action="/auth/register" method="POST">
                    <input type="text" 
                           placeholder="Username" 
                           name="user_name" 
                           value="<%= locals.formData ? formData.user_name : '' %>"
                           required>
                    <input type="email" 
                           placeholder="Email" 
                           name="email"
                           value="<%= locals.formData ? formData.email : '' %>"
                           required>
                    <input type="tel" 
                           placeholder="Phone (optional)" 
                           name="phone"
                           value="<%= locals.formData ? formData.phone : '' %>">
                    <input type="password" 
                           placeholder="Password" 
                           name="password" 
                           required>
                    <input type="password" 
                           placeholder="Confirm Password" 
                           name="confirm_password" 
                           required>
                    <button type="submit" class="normal">Register</button>

                    <div class="divider">
                        <span>OR</span>
                    </div>
                    <div class="social-login">
                        <a href="/auth/google" class="google-btn">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/c/c1/Google_%22G%22_logo.svg" alt="Google logo">
                            Sign up with Google
                        </a>
                    </div>
                    <p>Already have an account? <a href="/auth/login">Login</a></p>
                </form>
            </div>
        </section>

        <script>
            // Auto-hide messages after 5 seconds
            const messages = document.querySelectorAll('.alert');
            messages.forEach(message => {
                setTimeout(() => {
                    message.style.display = 'none';
                }, 5000);
            });
        </script>
    </body>
</html>